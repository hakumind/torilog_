<!DOCTYPE html>
<html>
  <head>
    <title>Torilog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">


  </head>

  <body>
  <div class="footerFixed">
    <header>
      <div class="header-logo">
        <%= link_to("Torilog", "/") %>
      </div>
      <ul class="header-menus">

        <% if @current_user %>

          <li>
              <%#= "現在ログインしているユーザーのid:"%>
              <%#= session[:user_id]%> 
          </li>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <li>
            <%#= link_to("選択", "/posts/select") %>
          </li>
          <li>
            <%= link_to("Post", "/posts/post") %>
          </li>
          <li>
            <%= link_to("Memory", "/posts/memory") %>
          </li>
          <li>
            <%= link_to("ログアウト", "/logout",{method: :post} )%>
          </li>
        
        <%else%>
          <li>
            <%= link_to("Torilogとは", "/about") %>
          </li>
          <li>
            <%= link_to("新規登録", "/signup") %>
          </li>
          <li>
            <%= link_to("ログイン", "/login") %>
          </li>
        <% end %>
  
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

    <footer>
     
       <p>Copyright © Torilog All Rights Reserved.</p>
      
  
    </footer>

  </body>
  
  </div>
    

</html>
